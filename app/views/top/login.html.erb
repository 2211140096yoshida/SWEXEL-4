<h1>ログイン</h1>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>



<%= form_with url: '/top/login', method: :post, local: true do |f| %>
<%= f.label :uid, 'ユーザーID' %>
<%= f.text_field :uid %>
<%= f.label :pass, 'パスワード' %>
<%= f.password_field :pass %>
<%= f.submit 'ログイン' %>
<a href="<%= new_user_path %>">新規ユーザー登録</a>
<% end %>